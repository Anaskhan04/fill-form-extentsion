{
  "manifest_version": 3,
  "name": "AutoForm Pro",
  "version": "1.0.0",
  "description": "Autofill web forms with user-defined profiles using fuzzy matching and visual feedback.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "fill_form": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Auto-fill the current form"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AutoForm Pro",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}